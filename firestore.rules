rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. GLOBAL ACCESS for Russell Robbins
    // Recursively allow access to the Russell Robbins root path.
    match /users/russell-robbins/{document=**} {
      allow read, list: if true;
      // In production, restrict write to authenticated admin.
      // Keeping broad for initial setup and restoration.
      allow write: if true; 
    }

    // Explicit support for the Bio path
    match /users/russell-robbins/portfolio/bio {
      allow read, write: if true;
    }
  }
}