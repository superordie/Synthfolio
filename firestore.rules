rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Portfolio Data: Allow anyone to READ (so your site works)
    // and allow authenticated users to WRITE (so your admin panel works)
    match /users/russell-robbins/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 2. Specific Collections: Explicitly allow listing for your Admin Dashboard
    match /users/russell-robbins/{collection}/{docId} {
      allow read, list: if true;
      allow write: if request.auth != null;
    }
  }
}