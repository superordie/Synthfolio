rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow broad recursive access for the portfolio owner Russell Robbins
    match /users/russell-robbins/{document=**} {
      // Public visitors can read
      allow read, list: if true;
      // In production, we'd check request.auth.uid == 'russell-robbins'
      // For studio/restoration context, allowing writes to this specific path.
      allow write: if true; 
    }
    
    // Fallback for bio document specifically
    match /users/russell-robbins/portfolio/bio {
      allow read, write: if true;
    }
  }
}
